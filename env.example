# NORONCLIENT Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
DEBUG=false
HOST=127.0.0.1
PORT=8000
WORKERS=4

# TLS Configuration
TLS_BASE=http://127.0.0.1:3000
TLS_AUTH_HEADER=X-Auth-Token
TLS_AUTH_TOKEN=your_tls_token_here

# Database
DATABASE_URL=sqlite:///./data/flowlite_data.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security (Generate new keys for production)
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Features
ENABLE_CURL_DUMP=0
ENABLE_MASK_COOKIES=1
DEBUG_TRACE=false

# Optional: Proxy Settings
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Optional: Redis (for session storage)
# REDIS_URL=redis://localhost:6379/0

# Optional: Email Settings (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=your_email@gmail.com
